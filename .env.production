# Production Environment Configuration for Vercel Deployment

# API Configuration
VITE_API_BASE_URL=https://gema-project.onrender.com/api
VITE_API_TIMEOUT=30000

# App Configuration
VITE_APP_NAME=Gema
VITE_APP_VERSION=1.0.2
VITE_APP_DESCRIPTION=Event Management and Booking Platform
VITE_APP_URL=https://kidrove-frontend.vercel.app

# Build Configuration
VITE_BUILD_TARGET=production
NODE_ENV=production

# Performance Optimizations
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_MOCK_API=false
VITE_LOG_LEVEL=error

# Cache Configuration (Production optimized)
VITE_CACHE_DURATION=600000
VITE_STATIC_CACHE_DURATION=86400000

# Security Settings
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_REDIRECT=true
VITE_SECURE_COOKIES=true

# Feature Flags (Production defaults)
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_FAVORITES=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_VENDOR_REGISTRATION=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_DARK_MODE=true

# Production Localization
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_TIMEZONE=UTC
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,ar
VITE_SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD

# Production SEO
VITE_SITE_NAME=Gema - Event Management Platform
VITE_SITE_DESCRIPTION=Discover and book amazing events in your area
VITE_SITE_KEYWORDS=events,booking,tickets,entertainment,workshops,conferences
VITE_SITE_AUTHOR=Gema Team
VITE_SITE_IMAGE=https://gema-events.vercel.app/og-image.jpg

# Production Contact Information
VITE_CONTACT_EMAIL=contact@gema-events.com
VITE_SUPPORT_EMAIL=support@gema-events.com
VITE_CONTACT_PHONE=+1-555-0123
VITE_COMPANY_ADDRESS=123 Main St, City, State 12345

# Legal Pages
VITE_PRIVACY_POLICY_URL=/privacy
VITE_TERMS_OF_SERVICE_URL=/terms
VITE_COOKIE_POLICY_URL=/cookies

# Rate Limiting (Production)
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=900000

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Note: Sensitive keys (API keys, secrets) should be added through Vercel dashboard
# These are placeholder values that should be overridden in Vercel environment variables:
